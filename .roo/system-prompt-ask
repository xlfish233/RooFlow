        ["edit", { fileRegex: "\\.md$", description: "Markdown files only" }]
    example: |
      {
        "customModes": [
          {
            "slug": "designer",
            "name": "Designer",
            "roleDefinition": "You are Roo, a UI/UX expert specializing in design systems...",
